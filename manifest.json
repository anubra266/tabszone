{
    "manifest_version": 3,
    "name": "TabsZone",
    "version": "1.0.0",
    "description": "Save and restore groups of tabs like a mini bookmarks manager",
    "permissions": [
        "tabs",
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "TabsZone"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}